      {
        "contents": "[Unit]\nDescription=Mount Local Disk to /gaia/docker/storage\n\n[Mount]\nWhat=/dev/xvdf\nWhere=/gaia/docker/storage\nType=xfs\n[Install]\nWantedBy=local-fs.target\n\n",
        "enabled": false,
        "name": "gaia-docker-storage.mount"
      },
      {
        "contents": "[Unit]\nDescription=Install docker-compose\nConditionPathExists=!/opt/bin/docker-compose\n\n[Service]\nType=oneshot\nRemainAfterExit=yes\nEnvironment=\"VERSION=`/usr/bin/curl -s https://api.github.com/repos/docker/compose/releases/latest | grep tag_name | cut -f4 -d '\\\"'`\"\nExecStart=/bin/bash -c \"/usr/bin/curl -o /opt/bin/docker-compose -sL https://github.com/docker/compose/releases/download/${VERSION}/docker-compose-Linux-x86_64\"\nExecStart=/usr/bin/chmod +x /opt/bin/docker-compose\n\n[Install]\nWantedBy=multi-user.target",
        "enabled": true,
        "name": "install-docker-compose.service"
      },
      {
        "contents": "[Unit]\nDescription=Checkout Gaia Repo\nConditionPathExists=!/gaia\nBefore=gaia-docker-storage.mount\n\n[Service]\nType=oneshot\nRemainAfterExit=yes\nExecStart=/usr/bin/git clone -b master --single-branch https://github.com/blockstack/gaia /gaia\n\n[Install]\nWantedBy=multi-user.target",
        "enabled": true,
        "name": "pull-gaia-repo.service"
      },
      {
        "contents": "[Unit]\nDescription=Run Gaia Hub Service\nRequires=docker.service\nAfter=docker.service\nAfter=pull-gaia-repo.service\nAfter=install-docker-compose.service\n\n[Service]\nWorkingDirectory=/gaia/docker\nRestart=always\n\n# Set Environment Variables\nEnvironmentFile=/gaia/docker/.env\nEnvironmentFile=/etc/environment\n\n# Stop\n# Compose down, remove containers and volumes\nExecStop=/opt/bin/docker-compose -f /gaia/docker/docker-compose.yaml -f /gaia/docker/docker-compose.certbot.yaml down -v\nExecStopStop=/opt/bin/docker-compose -f /gaia/docker/docker-compose.yaml -f /gaia/docker/docker-compose.certbot.yaml rm -v\n\n# Start\n# Modify gaia configs - will wipe out any manual changes\nExecStartPre=/bin/bash -x /gaia/docker/update_configs.sh\n\n# Compose up\n# Setup Local certs is being managed by a letsencrypt_init.timer\n\nExecStart=/opt/bin/docker-compose -f /gaia/docker/docker-compose.yaml -f /gaia/docker/docker-compose.certbot.yaml up\n\n[Install]\nWantedBy=multi-user.target",
        "enabled": true,
        "name": "gaia-hub.service"
      },
      {
        "contents": "[Unit]\nDescription=Install LetsEncrypt Certs\nRequires=gaia-hub.service\n[Service]\nType=oneshot\nWorkingDirectory=/gaia/docker\nEnvironmentFile=/etc/environment\n\nRemainAfterExit=yes\nExecStart=/bin/bash -x /gaia/docker/nginx/certbot/letsencrypt.sh\n\n[Install]\nWantedBy=multi-user.target",
        "enabled": false,
        "name": "get-acme-certs.service"
      },
      {
        "contents": "[Unit]\nDescription=Reset Gaia to first boot\n\n[Service]\nType=oneshot\nRemainAfterExit=no\nEnvironmentFile=/gaia/docker/.env\nEnvironmentFile=/etc/environment\nExecStart=/bin/bash -x /gaia/docker/nginx/certbot/reset-certs.sh\n\n[Install]\nWantedBy=multi-user.target",
        "enabled": false,
        "name": "reset-ssl-certs.service"
      },
      {
        "contents": "[Unit]\nDescription=Check DNS Record Service\nAfter=gaia-hub.service\nAfter=letsencrypt_init.service\nConditionPathExists=/tmp/letsencrypt.init\nConditionPathExists=!/tmp/dns_checked\nConditionPathExists=!/tmp/ssl_created\nConditionPathExists=/gaia/docker/nginx/certbot/check_dns.sh\nConditionPathExists=/gaia/docker/nginx/certbot/letsencrypt.sh\n\n[Service]\nType=oneshot\nRemainAfterExit=no\nEnvironmentFile=/etc/environment\nExecStart=/bin/bash -x /gaia/docker/nginx/certbot/check_dns.sh\nExecStart=/bin/bash -x /gaia/docker/nginx/certbot/letsencrypt.sh\n\n[Install]\nWantedBy=multi-user.target",
        "enabled": false,
        "name": "check_dns.service"
      },
