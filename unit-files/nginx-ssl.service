# nginx-ssl.service
[Unit]
Description=Nginx SSL Service
Requires=docker.service
Requires=create_docker_network.service
Requires=clone-repo.service
Requires=nginx.service
After=docker.service
After=create_docker_network.service
After=clone-repo.service
After=nginx.service

[Service]
WorkingDirectory=/gaia
TimeoutStartSec=0
Restart=always
RemainAfterExit=yes
RestartSec=5
ExecStartPre=-/usr/bin/docker stop nginx
ExecStartPre=-/usr/bin/docker pull ${NGINX_IMAGE}
ExecStart=/usr/bin/docker run \
  --net=gaia \
  -m 128m \
  -p 80:80 \
  -p 443:443 \
  --expose=80 \
  --expose=443 \
  --oom-kill-disable \
  -v /gaia/nginx/conf.d/nginx-local.conf:/etc/nginx/conf.d/default.template \
  -v /gaia/nginx/html/index.html:/usr/share/nginx/html/index.html \
  -v "${LOCAL_CERTBOT_CONF}:${REMOTE_CERTBOT_CONF}" \
  -v "${LOCAL_CERTBOT_WWW}:${REMOTE_CERTBOT_WWW}" \
  -e SERVER_NAME="${DOMAIN}" \
  -e SERVER_HTTP_PORT="80" \
  -e SERVER_HTTP_PORT="443" \
  --name nginx \
  ${NGINX_IMAGE} \
/bin/sh -c "envsubst \"`env | awk -F = '{printf \" $$%s\", $$1}'`\" < /etc/nginx/conf.d/default.template > /etc/nginx/conf.d/default.conf && while :; do sleep 6h & wait $${!}; nginx -s reload; done & nginx -g 'daemon off;'"

ExecStop=-/usr/bin/docker stop nginx
ExecStopPost=-/usr/bin/docker rm -f nginx
ExecReload=-/usr/bin/docker restart nginx

[Install]
WantedBy=multi-user.target
